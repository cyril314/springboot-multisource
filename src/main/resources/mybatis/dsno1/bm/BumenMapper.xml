<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fit.mapper.dsno1.bm.BumenMapper">
	
	<resultMap type="Bumen" id="bumenResultMap">
		<id column="BUMEN_ID" property="BUMEN_ID"/>
		<result column="NAME" property="NAME"/>
		<result column="PARENT_ID" property="PARENT_ID"/>
	</resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		BM_BUMEN
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.BNAME,	
		f.BUMEN_ID,
		f.PARENT_ID,
		f.NAME
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		BNAME,	
		BUMEN_ID,
		PARENT_ID,
		NAME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{BNAME},	
		#{BUMEN_ID},
		#{PARENT_ID},
		#{NAME}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			BUMEN_ID = #{BUMEN_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			BNAME = #{BNAME},
			NAME = #{NAME},
			BUMEN_ID = BUMEN_ID
		where 
			BUMEN_ID = #{BUMEN_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.BUMEN_ID = #{BUMEN_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.BUMEN_ID!= null and pd.BUMEN_ID != ''"><!-- 检索 -->
			and f.PARENT_ID = #{pd.BUMEN_ID}
		</if>
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
					 or 
				-->
					f.NAME LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') 
				
				)
		</if>
	</select>
	
	<!-- 通过ID获取其子级列表 -->
	<select id="listByParentId" parameterType="String" resultMap="bumenResultMap">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.PARENT_ID = #{parentId} order by f.NAME 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	
	<!-- fh 31 3 59 67 90 qq(青苔) -->
</mapper>